Screen:
    MDToolbar:
        id: toolbar
        title: "Dashboard"
        pos_hint: {"top": 1}
        elevation: 5
        specific_text_color: 1, 1, 1, 1
        left_action_items: [['menu', lambda x: root.ids.nav_drawer.set_state("open")]]
    NavigationLayout:
        id: navi 
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Dashboard:
                # name: "dashboard"
            InputPanen:
                # name: "inputpanen"
            Hasilpanen:
                # name: "hasilpanen"
            Cherry:
                name: "cheri"
            GB_Transport:
                # name: "gb_transport"
                
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer