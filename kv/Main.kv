<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    ScrollView:

        # DrawerList:
        #     id: md_list 
        MDList:
            OneLineIconListItem:
                icon: "home"
                text: "Dashboard"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "dashboard"
                    app.root.ids.toolbar.title = "Dashboard"
                    app.root.ids.screen_manager.transition.direction = "right"
            OneLineIconListItem:
                icon: "leaf"
                text: "Input Hasil Panen"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputpanen"
                    app.root.ids.toolbar.title = "Input Hasil Panen"
                    app.root.ids.screen_manager.transition.direction = "left"
            OneLineIconListItem:
                icon: "leaf"
                text: "Input Produksi"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputproduksi"
                    app.root.ids.toolbar.title = "Input Produksi"
                    app.root.ids.screen_manager.transition.direction = "left"

Screen:
    MDToolbar:
        id: toolbar
        title: "Dashboard"
        pos_hint: {"top": 1}
        elevation: 10
        specific_text_color: 1, 1, 1, 1
        left_action_items: [['menu', lambda x: root.ids.nav_drawer.toggle_nav_drawer()]]
    NavigationLayout:
        id: navi 
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Dashboard:
                name: "dashboard"
            InputPanen:
                name: "inputpanen"
            HasilInput:
                name: "hasilinput"
            InputProduksi:
                name: "inputproduksi"
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer