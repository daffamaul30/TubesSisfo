Screen:
    MDToolbar:
        id: toolbar
        title: "Dashboard"
        pos_hint: {"top": 1}
        elevation: 5
        specific_text_color: 1, 1, 1, 1
        left_action_items: [['menu', lambda x: root.ids.nav_drawer.set_state("open")]]
    NavigationLayout:
        id: navi
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Dashboard:
            InputPanen:
            Hasilpanen:
            Cherry:
            GB_Transport:
            GB_Bongkar:
            GB_Jemur:
            GK_Hull:
            GK_Jemur:
            Green_Suton:
            Green_Grading:
            Green_Color:
            Green_HandPick:
            # HasilAkhir:

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer