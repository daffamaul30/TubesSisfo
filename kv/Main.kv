<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    ScrollView:

        # DrawerList:
        #     id: md_list 
        MDList:
            OneLineIconListItem:
                icon: "home"
                text: "Dashboard"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "dashboard"
                    app.root.ids.toolbar.title = "Dashboard"

            OneLineIconListItem:
                icon: "leaf"
                text: "Input Hasil Panen"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputpanen"
                    app.root.ids.toolbar.title = "Input Hasil Panen"

Screen:
    MDToolbar:
        id: toolbar
        title: "Input Hasil Panen"
        pos_hint: {"top": 1}
        elevation: 10
        specific_text_color: 1, 1, 1, 1
        left_action_items: [['menu', lambda x: root.ids.nav_drawer.toggle_nav_drawer()]]
    NavigationLayout:
        id: navi 
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Dashboard:
            InputPanen:  
            InputPanen:
            InputProduksi:
            HasilInput:
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer