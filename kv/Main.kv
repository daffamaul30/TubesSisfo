<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    ScrollView:

        MDList:
            OneLineListItem:
                icon: "home"
                text: "Dashboard"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "dashboard"
                    app.root.ids.toolbar.title = "Dashboard"
                    app.root.ids.screen_manager.transition.direction = "right"
            OneLineListItem:
                text: "Produksi"
                disabled: True
            OneLineIconListItem:
                text: "Panen"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputpanen"
                    app.root.ids.toolbar.title = "Input Panen"
                    app.root.ids.screen_manager.transition.direction = "left"
