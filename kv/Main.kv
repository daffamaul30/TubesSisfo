<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "center"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "100dp", "100dp"
            source: "kv/assets/frinsa.png"
    MDLabel:
        text: "Java Frinsa Estate"
        font_style: "Button"
        size_hint_y: None
        halign: "center"
        height: self.texture_size[1]
    ScrollView:

        MDList:
            OneLineIconListItem:
                icon: "home"
                text: "Dashboard"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "dashboard"
                    app.root.ids.toolbar.title = "Dashboard"
                    app.root.ids.screen_manager.transition.direction = "right"
                IconLeftWidget:
                    icon: 'home'
                    disabled: True
            OneLineIconListItem:
                text: '[color=111111]Produksi[/color]'
                disabled: True
                IconLeftWidget:
                    icon: 'factory'
            OneLineIconListItem:
                text: "Panen"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputpanen"
                    app.root.ids.toolbar.title = "Input Panen"
                    app.root.ids.screen_manager.transition.direction = "left"
            OneLineIconListItem:
                text: "Cherry-Wet Mill - Muat"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "cheri"
                    app.root.ids.toolbar.title = "Cherry-Wett Mill"
                    app.root.ids.screen_manager.transition.direction = "left"
            OneLineIconListItem:
                text: "Gabah Basah-Transport Ke Pabrik"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "gb_transport"
