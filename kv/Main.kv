<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "center"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "100dp", "100dp"
            source: "kv/assets/frinsa.png"
    MDLabel:
        text: "Java Frinsa Estate"
        font_style: "Button"
        size_hint_y: None
        halign: "center"
        height: self.texture_size[1]
    ScrollView:

        MDList:
            OneLineIconListItem:
                icon: "home"
                text: "Dashboard"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "dashboard"
                    app.root.ids.toolbar.title = "Dashboard"
                    app.root.ids.screen_manager.transition.direction = "right"
                IconLeftWidget:
                    icon: 'home'
                    disabled: True
            OneLineIconListItem:
                text: '[color=111111]Produksi[/color]'
                disabled: True
                IconLeftWidget:
                    icon: 'factory'
            OneLineIconListItem:
                text: "Panen"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "inputpanen"
                    app.root.ids.toolbar.title = "Input Panen"
                    app.root.ids.screen_manager.transition.direction = "left"
            OneLineIconListItem:
                text: "Lanjutkan Produksi"
                on_press:
                    app.root.ids.nav_drawer.set_state("close")
                    app.root.ids.screen_manager.current = "search"
                    app.root.ids.toolbar.title = "Cari Produksi"
                    app.root.ids.screen_manager.transition.direction = "left"
            
Screen:
    MDToolbar:
        id: toolbar
        title: "Dashboard"
        pos_hint: {"top": 1}
        elevation: 5
        specific_text_color: 1, 1, 1, 1
        left_action_items: [['menu', lambda x: root.ids.nav_drawer.set_state("open")]]
    NavigationLayout:
        id: navi
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Dashboard:
            InputPanen:
            Hasilpanen:
            Cherry:
            GB_Transport:
            GB_Bongkar:
            GB_Jemur:
            GK_Hull:
            GK_Jemur:
            Green_Suton:
            Green_Grading:
            Green_Color:
            Green_HandPick:
            Search:
            HasilAkhir:
            Laporan:

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer