#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import utils kivy.utils

<HasilAkhir>
    name: "hasilakhir"
    BoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        height:500
        width:300
        orientation: "vertical"
        padding: 40, 0, 40, 170
        spacing: 50
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: 200
            padding: 0,0,0,0
            spacing: 60
            halign: "center"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Tanggal Panen (yyyy-mm-dd)"
                MDTextField:
                    id: date_picker_label
                    # helper_text: "Double tap to open calender"
                    # helper_text_mode: "persistent"
                    # on_double_tap: app.show_date_picker2()
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Proses"
                MDTextField:
                    id: proses_hasilakhir
                    # readonly: True 
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Cherry - wet mill (kg)"
                MDTextField:
                    id: proses_hasilakhir
                    # readonly: True
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Gabah basah - jemur (kg)"
                MDTextField:
                    id: proses_hasilakhir
                    # readonly: True
            

        MDFillRoundFlatButton:
            text: "Selesai"
            pos_hint: {"center_x": 0.8, "center_y": 0.1}
            font_size: 20
            halign: "center"
            specific_text_color: 1, 1, 1, 1
            on_release:
                app.dataPanen()
                app.root.ids.screen_manager.current = "hasilinput"
                root.manager.transition.direction = "left"
                app.root.ids.toolbar.title = "Dashboard"