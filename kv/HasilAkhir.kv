#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import utils kivy.utils

<HasilAkhir>
    name: "hasilakhir"
    BoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        height:500
        width:300
        orientation: "vertical"
        padding: 40, 0, 40, 50
        spacing: 50
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: 200
            padding: 0,0,0,0
            spacing: 60
            halign: "center"
            # Graph
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Tanggal (yyyy-mm-dd)"
                MDTextField:
                    id: hasilakhir_date
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Blok"
                MDTextField:
                    id: hasilakhir_blok
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Varietas"
                MDTextField:
                    id: hasilakhir_varietas
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Proses"
                MDTextField:
                    id: hasilakhir_proses
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Biaya (Hpp) per Kg"
                MDTextField:
                    id: hasilakhir_biaya

        MDRaisedButton:
            text: "Submit"
            pos_hint: {"center_x": 0.8, "center_y": 0.1}
            font_size: 20
            halign: "center"
            specific_text_color: 1, 1, 1, 1
            on_release:
                app.root.ids.screen_manager.current = "dashboard"
                root.manager.transition.direction = "left"