#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import utils kivy.utils
# :include kv/Main.kv
<Hasilpanen>
    name: "hasilpanen"
    BoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        height:500
        width:300
        orientation: "vertical"
        # size_hint: self.width,self.height
        padding: 40, 0, 50, 150
        spacing: 50
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: 200
            padding: 0,0,0,0
            spacing: 50
            halign: "center"
            BoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Tanggal Panen"
                MDLabel:
                    id: hsl_tgl_panen
                    halign: "right"
            BoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Varietas"
                MDLabel:
                    id: hsl_varietas
                    halign: "right"
            BoxLayout:
                orientation: "horizontal"
                # padding: 40,0,40,0
                MDLabel:
                    text: "Blok"
                # GridLayout:
                MDLabel:
                    id: hsl_blok
                    halign: "right"
            BoxLayout:
                orientation: "horizontal"
                # pos_hint: {"center_y": 1}
                # padding: 40,0,40,0
                MDLabel:
                    text: "Berat (Kg)"
                # GridLayout:
                MDLabel:
                    id: hsl_berat
                    halign: "right"
            BoxLayout:
                orientation: "horizontal"
                # pos_hint: {"center_y": 1}
                # padding: 40,0,40,0
                MDLabel:
                    text: "Biaya"
                # GridLayout:
                MDLabel:
                    id: hsl_biaya
                    halign: "right"
            BoxLayout:
                orientation: "horizontal"
                # pos_hint: {"center_y": 1}
                # padding: 40,0,40,0
                MDLabel:
                    text: "Proses"
                # GridLayout:
                MDLabel:
                    id: hsl_proses
                    halign: "right"

        MDFillRoundFlatButton:
            text: "Back To Home"
            # padding: 0,50,0,0
            pos_hint: {"center_x": 0.8, "center_y": 0.1}
            font_size: 20
            halign: "center"
            specific_text_color: 1, 1, 1, 1
            on_release:
                app.root.ids.screen_manager.current = "dashboard"
                root.manager.transition.direction = "down"
                app.root.ids.toolbar.title = "Dashboard"