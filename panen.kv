#:kivy 1.11.1
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    ScrollView:

        DrawerList:
            id: md_list

<InputPanen@Screen>:
    name : "inputPanen"

    NavigationLayout:

        ScreenManager:

            Screen:

                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Input Hasil Panen"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                    Widget:
                        BoxLayout:
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            height:500
                            width:300
                            orientation: "vertical"
                            size_hint: self.width,self.height
                            padding: 40, 0, 0, 150
                            BoxLayout:
                                id: satu
                                orientation: "vertical"
                                size_hint_y: None
                                height: 200
                                padding: 0,0,0,0
                                spacing: 50
                                halign: "center"
                                BoxLayout:
                                    orientation: "vertical"
                                    # padding: 40,0,40,0
                                    MDLabel:
                                        text: "Jenis Kopi"
                                    MDTextField:
                                        id: jenis
                                        color: self.theme_cls.opposite_bg_normal
                                BoxLayout:
                                    orientation: "vertical"
                                    # padding: 40,0,40,0
                                    MDLabel:
                                        text: "Berat (Kg)"
                                    MDTextField:
                                        id: berat
                                BoxLayout:
                                    orientation: "vertical"
                                    # padding: 40,0,40,0
                                    MDLabel:
                                        text: "Tanggal (yyyy-mm-dd)"
                                    # GridLayout:
                                    MDTextField:
                                        id: date_picker_label
                                        helper_text: "Double tap to open calender"
                                        helper_text_mode: "persistent"
                                        on_double_tap: app.show_date_picker()
                                BoxLayout:
                                    orientation: "vertical"
                                    # pos_hint: {"center_y": 1}
                                    # padding: 40,0,40,0
                                    MDLabel:
                                        text: "Waktu (hh:mm:ss)"
                                    # GridLayout:
                                    MDTextField:
                                        id: time_picker_label
                                        helper_text: "Double tap to open clock"
                                        helper_text_mode: "persistent"
                                        on_double_tap: app.show_time_picker()

                            MDFillRoundFlatButton:
                                text: "Submit"
                                pos_hint: {"center_x": 0.7, "center_y": 1}
                                font_size: 20
                                halign: "center"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
